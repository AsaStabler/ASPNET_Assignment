@model EditProjectViewModel

<div id="editProjectModal" class="modal">
	<div class="modal-content">

		<div class="modal-header">
			<h3>Edit Project</h3>
			<button class="btn-close" data-close="true"></button>
		</div>

		<form novalidate method="post" asp-action="EditProject" asp-controller="ProjectsPost">
			<input asp-for="Id" readonly type="hidden" />
			
			<div class="image-previewer circle">
				<img src="" class="image-preview" />
				<input asp-for="Image" accept="image/*" class="hide" />
			</div>
			
			<div class="form-group">
				<label asp-for="ProjectName"></label>
				<div class="field-group">
					<input asp-for="ProjectName" />
					<span asp-validation-for="ProjectName"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ClientName"></label>
				<div class="field-group">
					<input asp-for="ClientName" />
					<span asp-validation-for="ClientName"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<div class="field-group">
					<textarea type="text" asp-for="Description"></textarea>
					<span asp-validation-for="Description"></span>
				</div>
			</div>
			<div class="form-horizontal-group">
				<div class="form-group">
					<label asp-for="StartDate"></label>
					<div class="field-group">
						<input type="date" asp-for="StartDate" />
						<span asp-validation-for="StartDate"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="EndDate"></label>
					<div class="field-group">
						<input type="date" asp-for="EndDate" />
						<span asp-validation-for="EndDate"></span>
					</div>
				</div>
			</div>

			<!--div class="form-group">
				<label asp-for="Member"></label>
				<div class="field-group">
					<input asp-for="Member" />
					<span asp-validation-for="Member"></span>
				</div>
			</div-->

			<div class="form-group">
				<label asp-for="Budget"></label>
				<div class="field-group form-input-extended">
					<i class="fa-duotone fa-solid fa-dollar-sign"></i>
					<input class="indent" type="text" asp-for="Budget" />
					<span asp-validation-for="Budget"></span>
				</div>
			</div>

			<button type="submit" class="btn btn-submit btn-blue">Save</button>
		</form>

	</div>
</div>