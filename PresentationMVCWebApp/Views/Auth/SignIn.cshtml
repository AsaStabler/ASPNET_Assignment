@{
    Layout = "_CleanLayout";

    ViewData["Title"] = "Sign In";
}
@model SignInViewModel

<div class="center-screen">
    <main>
        <section id="login">
            <div class="card1">
                <div class="card-header">
                    <h1>Login</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="" asp-action="" novalidate>
                        <button type="submit" class="btn btn-gray btn-external">
                            <img src="images/icons/google-icon.svg" alt="google icon" />
                            <span>Log in with Google</span>
                        </button>
                    </form>

                    <div class="divider"><span>or</span></div>

                    <form method="post" asp-controller="Auth" aps-action="SignIn" novalidate>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <div class="field-group">
                                <input asp-for="Email" />
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <div class="field-group">
                                <input asp-for="Password" />
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="form-checkbox-group">
                            <!--label asp-for="IsPersistent"></label-->
                            <div class="form-checkbox">
                                <input id="persistent-checkbox" class="form-checkbox form-checkbox-input" asp-for="IsPersistent" />
                                <span asp-validation-for="IsPersistent"></span>
                            </div>
                            <span class="form-label">Remember Me</span>
                        </div>

                        <button type="submit" class="btn btn-submit btn-blue">Login</button>
                    </form>
                </div>
                <div class="card-footer">Don't have an account? <a href="@Url.Action("SignUp", "Auth")">Sign Up</a></div>
            </div>
        </section>
    </main>
</div>
