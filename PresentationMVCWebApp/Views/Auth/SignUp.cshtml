@{
    Layout = "_CleanLayout";

    ViewData["Title"] = "Sign Up";
}
@model SignUpViewModel   

<div class="center-screen">
    <main>
        <section id="signup" >
            <div class="card1">
                <div class="card-header">
                    <h1>Create Account</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="" asp-action="" novalidate>
                        <button type="submit" class="btn btn-gray btn-external">
                            <img src="images/icons/google-icon.svg" alt="google icon" />
                            <span>Sign Up with Google</span>
                         </button>
                    </form>

                    <div class="or-divider"><span>or</span></div>

                    <form method="post" asp-controller="Auth" aps-action="SignUp" novalidate>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <div class="field-group">
                                <input asp-for="FirstName" />
                                <span asp-validation-for="FirstName"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <div class="field-group">
                                <input asp-for="LastName" />
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <div class="field-group">
                                <input asp-for="Email" />
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <div class="field-group">
                                <input asp-for="Password" />
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <div class="field-group">
                                <input asp-for="ConfirmPassword" />
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                        <div class="form-checkbox-group">
                            <!--label asp-for="TermsAndConditions"></label-->
                            <div class="form-checkbox">
                                <input id="terms-checkbox" class="form-checkbox form-checkbox-input" asp-for="TermsAndConditions" />
                                <span asp-validation-for="TermsAndConditions"></span>
                            </div>
                            <span class="form-label">I accept <a href="#">Terms and Conditions</a></span>
                        </div>

                        <button type="submit" class="btn btn-submit btn-blue">Create Account</button>
                    </form>
                </div>
                <div class="card-footer">Already have an account? <a href="~/">Log in</a></div>
            </div>
        </section>
    </main>
</div>